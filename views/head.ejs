<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta property="og:url"           content="http://paint.jeremyfroment.fr/" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="Pictionnary" />
    <meta property="og:description"   content="Draw & Share" />
    <meta property="og:image"         content="http://paint.jeremyfroment.fr/img/favicon.png" />

    <title><%= title %></title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" media="screen" href="/css/styles.css">

    <script src="/js/jquery-1.10.2.js"></script>
    <script src="/js/jquery-ui.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <% if (typeof user != 'undefined') { %>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <% } %>
            <a class="navbar-brand" href="/">Pictionnary</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <% if (typeof user != 'undefined') { %>
                        <p class="navbar-text">
                            &nbsp;
                            &nbsp;
                            <%= user.prenom %>&nbsp;<%= user.nom %>
                            &nbsp;
                            <a href="/profile/<%= user.id %>">
                                <img id="img-profil" src="<%= (typeof user.profilepic != 'undefined') ? user.profilepic : "/img/user.png" %>" width="30" height="30" class="img-circle" style="border: 1px solid #00a99d">
                            </a>
                            &nbsp;
                            &nbsp;
                            &nbsp;
                            <a href="/logout" class="btn btn-xs btn-success">
                                <i class="fa fa-sign-out"></i>
                            </a>
                        </p>
                    <% } %>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <% if (typeof erreur != 'undefined') { %>
        <div class="alert alert-danger">
            <%= erreur %>
        </div>
    <% } %>

    <% if (typeof succes != 'undefined') { %>
        <div class="alert alert-success">
            <%= succes %>
        </div>
    <% } %>